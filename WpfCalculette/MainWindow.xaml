<Window x:Class="WpfCalculette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculette"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbxNumber1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="dfghdf" VerticalAlignment="Top" Width="120" Margin="50,42,0,0"/>
        <TextBox x:Name="tbxNumber2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="50,85,0,0" RenderTransformOrigin="0.125,-0.217" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Margin="130,185,0,0" Height="20" Click="btnAdd_Click"/>
        <Label x:Name="lblResponse" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="155,230,0,0" Width="135"/>

    </Grid>
</Window>
